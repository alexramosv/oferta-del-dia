/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

.order-enter
  transition .5s
  transform translateX(-120%)
  max-height 0
  padding 0 !important
  &.order-enter-active
    transform: translateX(0)
    padding 2rem 0 !important
    max-height 60px

.order-exit
  transition .5s
  transform translateX(0)
  &.order-exit-active
    transform: translateX(120%)
    padding: 0


.count-enter
  background white
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    background: white
    transform translateY(0)

.count-exit
  background black
  transition .5s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    background white
    transform translateY(-100%) scale(1.2)
